{
  "openapi": "3.0.0",
  "info": {
    "title": "Device Management API",
    "description": "API для управления устройствами в экосистеме умного дома.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://api.smart-home.com/v1",
      "description": "Основной сервер API"
    }
  ],
  "paths": {
    "/devices/{device_id}": {
      "get": {
        "summary": "Получение информации об устройстве",
        "description": "Возвращает подробную информацию о конкретном устройстве по его ID.",
        "parameters": [
          {
            "name": "device_id",
            "in": "path",
            "required": true,
            "description": "Идентификатор устройства",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Информация об устройстве возвращена.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "type_id": {
                      "type": "string"
                    },
                    "house_id": {
                      "type": "string"
                    },
                    "serial_number": {
                      "type": "string"
                    },
                    "status": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Устройство не найдено."
          },
          "500": {
            "description": "Ошибка сервера."
          }
        }
      },
      "put": {
        "summary": "Обновление состояния устройства",
        "description": "Позволяет изменить состояние устройства (например, включить/выключить).",
        "parameters": [
          {
            "name": "device_id",
            "in": "path",
            "required": true,
            "description": "Идентификатор устройства",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "description": "Новое состояние устройства",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "status": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Состояние устройства обновлено.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Некорректный запрос."
          },
          "404": {
            "description": "Устройство не найдено."
          },
          "500": {
            "description": "Ошибка сервера."
          }
        }
      },
      "post": {
        "summary": "Отправка команды устройству",
        "description": "Отправляет команду устройству (например, «установить температуру 22 градуса»).",
        "parameters": [
          {
            "name": "device_id",
            "in": "path",
            "required": true,
            "description": "Идентификатор устройства",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "description": "Команда для устройства",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "command": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Команда отправлена.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Некорректный запрос."
          },
          "404": {
            "description": "Устройство не найдено."
          },
          "500": {
            "description": "Ошибка сервера."
          }
        }
      }
    }
  }
}
